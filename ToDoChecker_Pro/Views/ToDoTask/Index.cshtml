@model List<ToDoTask>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Tasks ToDo</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="ToDoTask" asp-action="Create">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                </svg>  Create new Task
            </a>
        </div>
    </div>
</div>
<div class="table-responsive">
<table class="table table-bordered table-striped" style="background-color: white;">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                Task
            </th>
            <th>
                Status
            </th>
            <th>
                ~
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>
                
                @if (@obj.IsDone)
                {
                    <td style="color: gainsboro;">
                        <s>@obj.Name</s>
                    </td>
                    <td>
                        <input type="checkbox"
                               id="taskCheckbox-@obj.Id"
                               onchange="toggleTask(@obj.Id)"
                        @(obj.IsDone ? "checked" : "") />

                    </td>
                    <td>
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-check-lg" viewBox="0 0 16 16">
                            <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z" />
                        </svg>
                    </td>

                }
                else
                {
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        <input type="checkbox"
                               id="taskCheckbox-@obj.Id"
                               onchange="toggleTask(@obj.Id)"
                        @(obj.IsDone ? "checked" : "") />

                    </td>
                    <td>
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-x-lg" viewBox="0 0 16 16">
                            <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                        </svg>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
</div>
<script>
    function toggleTask(id) {
        fetch(`/ToDoTask/Ex`, {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(id)
        })
        .then(response => {
            if (response.ok) {
                console.log("Task toggled.");
                location.reload(); // Refresh to reflect changes
            } else {
                console.error("Failed to toggle task.");
            }
        })
        .catch(error => console.error("Error:", error));
    }
</script>
